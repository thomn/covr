{
  "compilerOptions": {
    "module": "CommonJS",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "esnext",
    "moduleResolution": "Node",
    "sourceMap": true,
    "paths": {
      "*": [
        "node_modules/*"
      ],
      "#/frontend/*": [
        "./packages/frontend/*"
      ],
      "#/backend/*": [
        "./packages/backend/*"
      ],
      "#/app/*": [
        "./app/covr/*"
      ]
    },
    "declaration": true,
    "jsx": "react"
  },
  "exclude": [
    "./**/test/*"
  ],
  "lib": [
    "ESNext"
  ],
  "include": [
    "./apps/**/*",
    "./packages/**/*"
  ]
}
